div#dates
	overflow hidden
	left 0
	top 10px
	width 100%
	margin-top -40px
	
	> div#startDateContainer
		float left
		margin-left 5%
		width 25%

		> div#startDate
			width 100%
			background rgb(250,250,250)
			border 1px solid rgb(240,240,240)
			padding 10px 5px 5px 10px
		
	> div#endDateContainer
		float right
		margin-right 5%
		width 25%

		> div#endDate
			width 100%
			background rgb(250,250,250)
			border 1px solid rgb(240,240,240)
			padding 10px 5px 5px 10px
	
	> div#fixedCheckboxContainer
		float right
		margin-right 5%
		width 25%

		> div#fixedCheckbox
			margin 10px auto 0 auto
			background rgb(255,255,255)
			width 50px
			height 50px
			background rgb(240,240,240)
			border 1px solid rgb(230,230,230)
			padding 10px
			&:hover
				cursor pointer
			
			> img#fixedTick
				width 30px		
			
	.title
		font-size 20px
		color rgb(80,80,80)
		font-family sans-serif
		text-align center
		padding 10px 0px
		
		
#arrow
	fill rgb(200,200,200)
	&:hover
		cursor pointer

#arrowShort
	fill rgb(200,200,200)
	&:hover
		cursor pointer
	
text.dateString
	fill rgb(50,50,50)
	
text.timeString
	fill rgb(50,50,50)
	
